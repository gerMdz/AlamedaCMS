<style>
    .carousel-caption_top{
        position: absolute;
        right: 15%;
        top: 3rem;
        left: 15%;
        padding-top: 1.25rem;
        padding-bottom: 1.25rem;
        color: #fff;
        text-align: center;
    }
    .para {
        width: 50%;
    }
    img.mix-carousel{
        height: 70% !important;
        width: 100% !important;
    }

    .para-light {
        opacity: 0.7;
    }

    .home,
    .about,
    .services,
    .plans,
    .work,
    .contact {
        height: 110vh;
        position: relative;
    }

    .home_text,
    .home .fas,
    .plans .far,
    .information .fas,
    .work .fas,
    .services .fas,
    .location .far,
    .location .fas {
        padding: 15px 0;
        background: -webkit-gradient(
                linear,
                left top,
                left bottom,
                from(#0ee951),
                to(#00dabf)
        );
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    @media only screen and (max-width: 540px) {
        h1 {
            font-size: 30px;
        }

        .para {
            width: 100%;
        }

        .swiper-container {
            width: 92%;
        }

        .swiper-button-prev {
            left: -16px;
            width: 22px;
            background-size: 22px 34px;
        }

        .swiper-button-next {
            right: -16px;
            width: 22px;
            background-size: 22px 34px;
        }
    }

</style>
<section class="{{ section.cssClass|default('py-3 d-flex align-items-center') }}"
         id="{{ section.identifier|default('header-carousel') }}" style="{{ section.cssStyle|default('') }}">
    <div class="container text-light py-3 mw-100" data-aos="fade-right">
        <div id="carouselTemplateCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for imageSection in section.sectionImages %}
                <button type="button" data-bs-target="#carouselTemplateCaptions"
                        data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}
                        aria-current="true" aria-label="{{ imageSection.nOrder }}">


                </button>
                {% endfor %}

            </div>
            <div class="carousel-inner">
                {% for imageSection in section.sectionImages %}
                <div class="carousel-item {% if loop.first %} active {% endif %} col-sm-12" data-bs-interval="5000">
                    <img src="{{ imageSection.imageId.imagePath|imagine_filter('squared_thumbnail_large_16-5') }}"
                    alt="{{ app.request.baseUrl }}"  class="d-block mix-carousel" >
                    <div class="carousel-caption_top d-none d-md-block">
                        <h5>{{ section.title| raw }}</h5>
                        <p>{{ section.contenido | raw }}</p>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselTemplateCaptions"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Ant.</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselTemplateCaptions"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Sig.</span>
                    </button>
                </div>
                {% endfor %}


            </div>
        </div>
    </div>
</section>


