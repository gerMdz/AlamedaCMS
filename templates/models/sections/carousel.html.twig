<style>

    .carousel .carousel-indicators {
        bottom: 4em !important;
    }
    .carousel-caption.top {
        margin-top: 1em;
        padding-bottom: 1em;

    }

    .carousel-caption.bottom {
        margin-top: 2em;
        min-height: 3em;
        max-height: 3em;
    }

    .carousel-caption {
        position: relative;
        border: 0;
        padding-top: 0 !important;
        bottom: 0 !important;
