<section class="py-3">
    <div class="container">
        <div class="row align-items-center {{ section.cssClass }}">
{#        <div class="row h-100 align-items-center justify-content-center text-center {{ section.cssClass }}">#}
{#            <div class="container">#}
                <div class="motto text-center">
                    <img src="{{ section.imagePath|imagine_filter('squared_thumbnail_600-400') }}"
                         class="img-fluid " alt="{{ base_lema() }}">

                </div>
                <br/>

                <a class="btn bg-gradient-info btn-info btn-lg col-sm-4 mx-auto "

                        {% if (section.linkPosting) %}
                            href="{{ section.linkPosting }}"
                            {% if (section.isLinkExterno) %}
                                target="_blank"
                            {% endif %}
                        {% else %}
                            href="{{ path(section.linkRoute) }}"
                        {% endif %}
                >
                    {{ section.contenido | replace({'<p>':'', '</p>':''}) | raw }}
                </a>
            </div>
        </div>
</section>