{% extends 'base_material_kit.twig' %}
{% block sections %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                {% for section in datosIndex.section %}
                    {% if section.orden == 0%}
                    {{ render(controller(
                        'App\\Controller\\SectionController::mostrarSection', {id: section.id}
                    )) }}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-md-9 col-sm-12 mr-0 pr-0 mt-md-0 mb-sm-5 order-sm-2 order-md-1 order-lg-1">
                {% for section in datosIndex.section %}
                    {% if section.orden != 0%}

                    {{ render(controller(
                        'App\\Controller\\SectionController::mostrarSection', {id: section.id}
                    )) }}

                    {%endif%}
                {% endfor %}
            </div>
            <div class="col-sm-12 d-md-none mt-8 order-sm-3 order-md-2 order-lg-2">

            </div>
            <div class="col-md-3 col-sm-12 ml-0 pl-0 mt-md-0 mt-sm-5 order-sm-1 order-md-2 order-lg-3">
                {% for fixes in blocsFixes %}
                    {% if fixes.fixesType == 'side-fixe-right' %}
                        {% for blocsection in fixes.section %}
            <div class="m-0 p-0 border-bottom border-secondary">
                            {{ render(controller(
                                'App\\Controller\\SectionController::mostrarSection', {id: blocsection.id}
                            )) }}
            </div>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </div>
{#            <div class="bg-camino" style="height: 200px">#}
{#            </div>#}
        </div>
    </div>

{% endblock %}
