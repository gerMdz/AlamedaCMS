<!DOCTYPE html>
<html>
<head>

    {% set base = base_base() %}
    <meta charset="UTF-8">
    <title>
        {% block title %}{{ base.siteName|default('AlamedaCMS') }} Bienvenido! {% endblock %}
    </title>
    {% set index = 'base' %}
    <meta name="description" content="AlamedaCMS,  {{ base_metaDescripcion() }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{ base.lema|default('AlamedaCMS') }}{{ base_metaDescripcion() }}">
    <meta name="keywords" content="AlamedaCMS, {% block keywords_content -%} {{ base.lema|default('AlamedaCMS') }},{% endblock%} {{ base_metaDescripcion() }}">
    <meta name="author" content="{{ base.metaAutor|default('AlamedaCMS') }}">
    <meta property="og:title" content="{{ base.metaTitle|default('AlamedaCMS') }}"/>
    <meta property="og:type" content="{{ base.metaType|default('site') }}"/>
    <meta property="og:url" content="{{ base.metaUrl|default('AlamedaCMS') }}"/>
    <meta property="og:image" content="{{ base.metaUrl|default('AlamedaCMS') }}{{ asset('images/og-base.png') }}">
    <title>{{ base.metaTitle|default('AlamedaCMS') }}</title>
    {% include('inicio/_favicon_html.twig') %}

    {% block stylesheets %}

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">

        {{ encore_entry_link_tags('tailwindStyle') }}

        <style>
            .swiper-container {
                width: 100%;
                padding-top: 50px;
                padding-bottom: 50px;
            }
            .swiper-slide {
                background-position: center;
                background-size: cover;
                width: 300px;
                height: 300px;
            }
        </style>
    {% endblock %}
</head>
<body>

{% block nav %}
    {% include('inicio/_nav.html.twig') %}
{% endblock %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success mt-5 pt-5 mb-0 pb-0">
        {{ message }}
    </div>
{% endfor %}
{% if is_granted('ROLE_PREVIOUS_ADMIN') %}
    <div class="alert alert-warning" style="position: fixed; bottom: 50px">
        Temporalemte
        <a href="{{ path('index', {'_switch_user': '_exit'}) }}">Salir modo </a>
    </div>
{% endif %}



{% block body %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendors/jquery.min.js') }}"></script>
    <script src="{{ asset('vendors/jquery.migrate.min.js') }}"></script>
    <script src="{{ asset('vendors/popper.min.js') }}"></script>
    <script src="{{ asset('vendors/bootstrap/js/bootstrap.min.js') }}"></script>

    <!-- Theme Settings and Calls -->
    <script src="{{ asset('js/global.js') }}"></script>





    {{ encore_entry_script_tags('tailwind') }}

    <script type="text/javascript" src="js/jquery.countdown.js"></script>
    <script type="text/javascript" src="js/swiper.min.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip({html: true, placement: "bottom"});
        });
    </script>

{% endblock %}
{% block footer %}
    {% include 'inicio/_footer.html.twig' %}
{% endblock %}
</body>
</html>
