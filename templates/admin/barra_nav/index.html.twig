{% extends 'base_coreui.html.twig' %}

{% block title %}Barra de navegación{% endblock %}
{% block nav %}
    {{ include('admin/_nav.html.twig',  {'marca_label': 'barra_nav'}) }}
{% endblock %}
{% block breadcrumb %}
    {{parent()}}
    <li class="breadcrumb-item active"><span>Barra de navegación</span></li>
    <li class="breadcrumb-item float-end">
        <div class="form-group form-inline">
            <form action="" method="get">
                <label for="busq">
                    <span class="input-group-prepend">
                        <button class="btn btn-outline-secondary bg-white border-bottom-0 border rounded-pill" type="submit"
                        id="btn-search"
                        data-id="search-input" >
                        <i class="fa fa-search"></i>
                        </button>

                        <input class="form-control border-end-0 border rounded-pill"  type="search"
                    value="" id="busq" name="busq" placeholder="Buscar ...">
                    </span>
                </label>
            </form>
        </div>
    </li>

{%endblock%}

{% block content %}
<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Barra de navegación</h4>
            <p class="card-category">Listado </p>
        </div>
        <div class="card-body">
            <a href="{{ path('admin_barra_nav_new') }}" class="btn btn-sm btn-primary btn-round">
                Crear Barra de navegación <span class="fa fa-plus-circle"></span>
            </a>
