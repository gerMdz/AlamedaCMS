{#            </div>#}
            <div class="table-responsive sticky-header header-sticky">
                <table class="table sticky-header" data-toggle="table">
                    <thead class=" text-primary ">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Identifier</th>
                <th>Content</th>
                <th>ImageFilename</th>
                <th>Description</th>
                <th>IsIndex</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>CssClass</th>
                <th>CssStyle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for barra_nav in barra_navs %}
            <tr>
                <td>{{ barra_nav.id }}</td>
                <td>{{ barra_nav.title }}</td>
                <td>{{ barra_nav.identifier }}</td>
                <td>{{ barra_nav.content }}</td>
                <td>{{ barra_nav.imageFilename }}</td>
                <td>{{ barra_nav.description }}</td>
                <td>{{ barra_nav.isIndex ? 'Yes' : 'No' }}</td>
                <td>{{ barra_nav.createdAt ? barra_nav.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ barra_nav.updatedAt ? barra_nav.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ barra_nav.cssClass }}</td>
                <td>{{ barra_nav.cssStyle }}</td>
                 <td class="list-inline">
                            <a href="{{ path('admin_barra_nav_show', {'id': barra_nav.id}) }}">
                                <i class="fa fa-eye"></i> Ver
                            </a>
                            <br/>
                            <a href="{{ path('admin_barra_nav_edit', {'id': barra_nav.id}) }}">
                                <i class="fa fa-edit"></i> Editar
                            </a>
                        </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">No hay barras de navegación creadas</td>
            </tr>
        {% endfor %}
             </tbody>
            </table>
            </div>
            <a href="{{ path('admin_barra_nav_new') }}" class="btn btn-sm btn-primary btn-round">
                Crear Barra de navegación <span class="fa fa-plus-circle"></span>
