{% block content %}
    <h1>Organization</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Address1</th>
                <td>{{ organization.address1 }}</td>
            </tr>
            <tr>
                <th>Address2</th>
                <td>{{ organization.address2 }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ organization.identifier }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ organization.responsable }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ organization.owner }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ organization.email }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ organization.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_organization_index') }}">Volver al listado</a>

