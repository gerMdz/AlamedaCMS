{#    </div>#}

    {{ include('admin/_modal.html.twig') }}
    {{ include('admin/_modoOscuro.html.twig') }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    {{ include('admin/_llamadaModal.html.twig') }}
{% endblock %}
