{% extends 'base.html.twig' %}

{% block title %}Perfil {{ app.user.username}} {% endblock %}
{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('perfil') }}
{% endblock %}



{% block body %}
    <div class="container mt-5">
        <div class="row user-menu-container square mt-5">
            <div class="col-md-12 user-details mt-5">
                <div class="row spacepurplebg ">
                    <div class="col-md-2 no-pad">
                        <div class="user-image">
                            <img src="https://robohash.org/{{app.user.email}}?set=set2" class="img-responsive thumbnail">
                        </div>
                    </div>
                    <div class="col-md-10 no-pad">
                        <div class="user-pad">
                            <h3>Hola {{ app.user.primerNombre }}</h3>
                            <h4 class="text-info"><i class="fas fa-envelope"></i> {{ app.user.email}} </h4>

                            <a class="btn btn-labeled btn-info" href="{{ path('app_changepassword', {'email':app.user.email}) }}">
                                <span class="btn-label"><i class="fa fa-pencil"></i></span>Cambio Clave
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row overview">
                    <div class="col-md-4 user-pad text-center">
{#                        <h3>COMMENTS</h3>#}
{#                        <h4>184</h4>#}
                    </div>
                    <div class="col-md-4 user-pad text-center">
{#                        <h3>ARTICLES READ</h3>#}
{#                        <h4>1,910</h4>#}
                    </div>
                    <div class="col-md-4 user-pad text-center">
{#                        <h3>LIKES</h3>#}
{#                        <h4>3,892</h4>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('perfil') }}
{% endblock %}