<form method="post" action="{{ path('page_index_delete', {'id': page_index.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page_index.id) }}">
    <button class="btn">Delete</button>
</form>
