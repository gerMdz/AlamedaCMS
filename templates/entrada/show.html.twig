{% extends 'contenido_base.html.twig' %}

{% block title %}Vista {{ entrada.titulo }}{% endblock %}

{% block contenido_body %}
    <h4>Entrada: <strong class="ml-5"> {{ entrada.titulo }} </strong></h4>

    <table class="table">
        <tbody>
        <tr>
            <th>Imagen</th>
            <td>
                <img class="show-article-img" src="{{entrada.imagePath|imagine_filter('squared_thumbnail_medium') }}"></td>
        </tr>
            <tr>
                <th>Id</th>
                <td>{{ entrada.id }}</td>
                <th>linkRoute</th>
                <td>{{ entrada.linkRoute }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entrada.titulo }}</td>
                <th>Autor</th>
                <td>
                    {{ entrada.autor }} <br/>
                    {{ entrada.autor.email }}
                </td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ entrada.contenido }}</td>
            </tr>
            <tr>
                <th>Publicado</th>
                <td>
                {% if(entrada.publicadoAt | default) %}
                {{ entrada.publicadoAt | date('d-m-Y H:i') }}
                    {% else %}
                        <i class="fas fa-times text-danger"></i>
                    {% endif %}
                </td>
            </tr>


        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_entrada_index') }}">Volver al listado</a>

    <a class="btn btn-outline-warning" href="{{ path('admin_entrada_edit', {'id': entrada.id}) }}">Editar</a>

    {{ include('entrada/_delete_form.html.twig') }}
{% endblock %}
