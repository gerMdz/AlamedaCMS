{% extends 'base_material_kit.twig' %}
{% form_theme form _self %}
{% block form_row %}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}

    {{- form_label(form, null, {
        label_attr: { class: 'sr-only' }
    }) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_help(form) -}}

{% endblock %}


{% block title %}Cambio Clave  {{ base.siteName}} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('loginStyle') }}
    <link rel="stylesheet" href="{{ asset('css/styles.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}


{% block sections %}



    {{ form_start(form, {
        'attr':{
            'class': 'form-signin'
        }
    }) }}
    {% if app.user %}
        <div class="mb-3">
            Usted a ingresado como {{ app.user.username }}, <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Salir</a>
        </div>
    {% endif %}
    <h1 class="h3 mb-3 font-weight-normal">Cambio de clave Usuarios de La Alameda </h1>

    {#        {{ form_widget(form) }}#}


    {{ form_row(form.password.first, {
        attr: { placeholder: 'Clave' }
    }) }}
    {{ form_row(form.password.second, {
        attr: { placeholder: 'Repita Clave ' }
    }) }}



    <button class="btn btn-lg btn-primary" type="submit">
        Cambiar Clave
    </button>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': true}) }}


{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

