{% extends 'base_admin.html.twig' %}
{% block title %}Secciones {{ base.siteName }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin_section_form.js') }}"></script>
    <script src="{{ asset('vendors/datetimepicker/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script type="application/javascript">
        $(function () {
            $('.datetimepicker').datetimepicker({
                locale: 'es',
                icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down",
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-remove'
                }
            });
        })
    </script>
{% endblock %}
{% block nav %}
    {{ include('admin/_nav.html.twig',  {'marca_label': 'Secciones'}) }}
{% endblock %}
{% block content %}
    <h5>Edici√≥n de "{{ section.name }} - {{ section.identificador }}" </h5>
    <div class="form-container">
        {{ include('section_admin/_form.html.twig',
            {
                button_label :'Actualizar'
            }) }}
    </div>
    <a class="btn btn-link" href="{{ path('admin_section_list') }}"><i class="fas fa-backspace"></i> Volver al listado</a>
{% endblock %}

