{% extends 'base_admin_board.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('select2') }}
    <style>
        .custom-file-input ~ .custom-file-label.custom-file-label::after {
            content: "Elegir imagen";
            color: #fff;
            background-color: #9c27b0;
            top: 10px;
            box-shadow: 0 2px 2px 0 rgba(156, 39, 176, 0.14), 0 3px 1px -2px rgba(156, 39, 176, 0.2), 0 1px 5px 0 rgba(156, 39, 176, 0.12);
            position: absolute;
            /*padding: 3px 9px;*/
            /*margin: auto 1px;*/
            font-size: .75rem;
            font-weight: 400;
            /*line-height: 1.428571;*/
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 0;
            cursor: pointer;
            border: 0 currentcolor;
            border-radius: 0.2rem;
            outline: 0;
            transition: box-shadow 0.2s cubic-bezier(0.4, 0, 1, 1), background-color 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            will-change: box-shadow, transform;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="col-sm-6 mx-auto text-center">
        <h4>Im치genes de la secci칩n</h4>
    </div>
    <div class="row">

        {% for section_image  in section.sectionImages %}
            <div class="col-sm-2">
                {% if (section_image.imageId.imageFilename != null) %}
                    <img class="article-img" alt="{{ base.lema }}"
                         src="{{ section_image.imageId.imagePath|imagine_filter('squared_thumbnail_50') }}">
                    {{ section_image.imageId.imageFilename | u.truncate(30, '...') }}
                {% else %}
                    No tiene imagen
                {% endif %}
            </div>
            <div class="col-sm-2">
                {{ section_image.nOrder|default('-') }}
            </div>
            <div class="col-sm-1">
                {{ section_image.isPrincipal?'<i class="fa fa-check"></i>':'<i class="fa fa-minus"></i>' }}
            </div>
            <div class="col-sm-1">
                {{ section_image.isUsable?'<i class="fa fa-check"></i>':'<i class="fa fa-minus"></i>' }}
            </div>
            <div class="col-sm-4">
                {{ section_image.filter }}
            </div>
            <div class="col-sm-2">
                {{ include('section_image/_delete_form.html.twig', {'button_label':'Eliminar de la secci칩n'}) }}
            </div>
        {% endfor %}

    </div>
    <div class="form-container">
        <div class="form-container">
            {{ include('section_admin/_form_add_images.html.twig',
                {
                    button_label:'Agregar Im치genes'
                }) }}
        </div>
    </div>
    <a class="btn btn-info" href="{{ path('admin_section_list') }}">Ir al Listado</a>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin_section_form.js') }}"></script>

    <script src="{{ asset('material-dashboard/assets/js/core/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('material-dashboard/assets/js/core/popper.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('material-dashboard/assets/js/plugins/moment-with-locales.min.js') }}"></script>
    <script src="{{ asset('material-dashboard/assets/js/plugins/bootstrap-datetimepicker.min.js') }}"></script>
    {{ encore_entry_script_tags('select2') }}


    <script type="application/javascript">

    </script>
{% endblock %}
