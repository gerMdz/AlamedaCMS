{% extends 'base_material_kit.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}

{% endblock %}

{% block sections %}
    <div class="page-header-30 header-filter mt-5" data-parallax="true"
         style="background-image: url({{ asset('images/institucional/mix_auditorio.jpg') }})">
        <div class="container">
            <div class="row text-white">
                <div class="col-md-6">
                    <h2 class="title text-white-75">Iglesia de la Alameda</h2>
                </div>
            </div>
        </div>
    </div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="col-sm-4 mx-auto text-center">
                <div class="alert alert-{{ label }} alert-dismissible">
                    {{ message }}
                </div>
                <a class="btn btn-alameda" href="{{ path('reserva_index') }}">
                    Puede reservar desde aqu√≠
                </a>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="main main-raised mt-lg-n60 mt-sm-5 ">
        <div class="container">
            <div class="section text-center">
                <div class="row">
                    <div class="col-md-12 ml-auto mr-auto">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title "> Lectura reserva </h4>
                                <p class="card-category"></p>
                                <br/>
                                <div id="qr-reader" style="width:100%"></div>
                                <div id="qr-reader-results"></div>


                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/html5-qrcode.min.js') }}"></script>
    <script src="{{ asset('js/scanner.js') }}"></script>



{% endblock %}

