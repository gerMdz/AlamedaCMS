{{ form_start(form, {'action' : path('crea_reserva', { 'id': celebracion.id })}) }}
<div class="container my-auto">
    <div class="row">
        <div class="col-lg-10 col-md-10 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-n4 mx-2 z-index-2">
                    <div class="bg-gradient-info shadow-info border-radius-lg py-3 pe-1">
                        <span class="px-5 mx-auto text-dark">
                        Reservar
                        </span>

                        {# <div id="reserva" class="modal-body"> #}
                        {# <div class="card"> #}
                        {# <div class="card-header card-header-primary py-1"> #}
                        <div class="row mt-2">
                            <div class="col-12 text-center ms-auto text-white-75">
                                <h5 class="card-title text-white-75 "> {{ celebracion.nombre }} </h5>
                                <p class="card-category mb-0"> {{ celebracion.fechaCelebracionAt | format_date(pattern="d 'de' MMMM") }} </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body mt-0">
                        <div class="input-group input-group-outline my-1">
                            <label class="label text-dark mr-5 pr-5">
                                <i class="fa fa-user"> </i> <br/>Nombre
                            </label>

                        </div>
                        <div class="input-group input-group-outline my-1">


                            {{ form_widget(form.nombre) }}

                            </div>
                        <div class="input-group input-group-outline my-1">
                            <label class="label text-dark">
                                <i class="fa fa-house-user"> </i> Apellido
                            </label>
                        </div>
                        <div class="input-group input-group-outline my-1">
                            {{ form_widget(form.apellido) }}
                        </div>
                        <div class="input-group input-group-outline my-1">
                            <label for="{{ form.email.vars.id }}" class="label text-dark">
                                <i class="fa fa-at"> </i> Email
                            </label>
                        </div>
                        <div class="input-group input-group-outline my-1">
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="input-group input-group-outline my-1">
                            <label for="{{ form.telefono.vars.id }}" class="label text-dark">
                                <i class="fa fa-whatsapp"> </i> WhatsApp
                            </label>
                        </div>
                        <div class="input-group input-group-outline my-1">
                            {{ form_widget(form.telefono) }}
                        </div>
                        <div class="input-group input-group-outline my-1">
                            <label for="{{ form.acompanantes.vars.id }}" class="label text-dark">
                                <i class="fa fa-users"> </i> Acompa√±antes
                            </label>
                        </div>
                        <div class="input-group input-group-outline my-1">
                            {{ form_widget(form.acompanantes) }}
                        </div>
                        <div class="col-sm-12 p-0 text-center">
                            {{ form_row(form.save) }}
                        </div>

                        {{ form_row(form.celebracion) }}
                        {{ form_widget(form._token) }}

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
            {{ form_end(form, {'render_rest': false}) }}
