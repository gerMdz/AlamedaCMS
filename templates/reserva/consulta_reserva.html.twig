{% extends 'base_navidad_material_kit.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block sslocal %}
    <style>

        html {
            background: url({{ asset('images/fondo_navidad.jpg') }}) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            font-family: 'ArialNova', "proxima-nova", "Helvetica Neue", sans-serif !important;

        }


        .bg {
            /* The image used */
        {#background-image: url({{ asset('images/fondo_navidad.jpg') }});#}

            /* Full height */
            height: 100%;
            background-color: rgba(255, 255, 255, 0);

            /* Center and scale the image nicely */
            background-position: center center;
            background-repeat: no-repeat;
            background-size: auto;
            position: absolute;
            width: 100%;
        }
    </style>

{% endblock %}

{% block sections %}
    <div class="page-header-30 header-filter mt-5" data-parallax="true"
{#         style="background-image: url({{ asset('images/texto_navidad.png') }})">#}
         >
        <div class="container">
            <div class="row text-white">
                <div class="col-md-6">
                    <h2 class="title text-white-75 mb-0">Auditorio Alameda</h2>
                    <h5 class="title text-white-50">Av. San Martín 2020, Mendoza</h5>
                </div>
            </div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="col-sm-4 mx-auto text-center">
                <div class="alert alert-{{ label }} alert-dismissible">
                    {{ message }}
                </div>
                <a class="btn btn-alameda" href="{{ path('reserva_index') }}">
                    Puede reservar desde aquí
                </a>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="main main-raised mt-lg-n60 mt-sm-5 ">
        <div class="container">
            <div class="section text-center">
                <div class="row">
                    <div class="col-md-7 ml-auto mr-auto">
                        <div class="card">
                            <div class="card-header card-header-primary">

                                <h4 class="card-title "> Consultar reserva
                                    <br/>
                                    <small>y completar datos</small>  </h4>
                                <p class="card-category"></p>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                <div class="col-sm-12 m-2 p-0">
                                    <div class="input-group input-group-outline">
                                    <label for="{{ form.celebracion.vars.id }}" class="label text-dark">
                                        <i class="fa fa-hands mx-3 px-3 my-auto"> </i>
{#                                        Celebracion#}
                                    </label>
                                    {{ form_widget(form.celebracion) }}
                                    </div>
                                </div>
                                <div class="col-sm-12 m-2 p-0">
                                    <div class="input-group input-group-outline">
                                    <label for="{{ form.email.vars.id }}" class="label text-dark">
                                        <i class="fa fa-at mx-3 px-3 my-auto"> </i>
{#                                        Email#}
                                    </label>
                                    {{ form_widget(form.email) }}
                                    </div>
                                </div>

                                <div class="col-sm-12 p-0 text-center">
                                    <button class="btn btn-info">{{ button_label|default('Buscar') }}</button>
                                </div>

                                {{ form_widget(form._token) }}
                            </div>
                            <div class="card-footer">
                                <div class="cols-sm-12 text-center">
                                    <a class="btn" href="{{ path('reserva_index') }}">
                                        Podés reservar desde aquí
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-5 m-auto">
                        <img class="img-fluid" src="{{ asset('images/texto_navidad.png') }}" alt="Navidad en La Alameda">
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}
    Formulario -Consulta
{% endblock %}
