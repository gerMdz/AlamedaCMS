    <link rel="stylesheet" type="text/css" href="{{ asset('css-misc/mdb.min.css') }}">

{% endblock %}



{% block sections %}

    <!-- Promo Content -->
    <div class="page-header-60 header-filter mt-5 bg-reserva">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xl-12">
                    <h1 class="title">Iglesia de la Alameda</h1>
                    <h4>Tú lugar en tú celebración </h4>
                    <small class="text-alameda">Regístrate a continuación</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charlas -->
    <div class="main main-raised mt-lg-n60 ">
        <div class="container">
            <div class="section text-center">
                <div class="row">
                    <div class="col-md-8 ml-auto mr-auto">


                        {% if (celebraciones|length > 0) %}
                            {% for celebracion in celebraciones %}
                                <a href="#">
                                    {{ celebracion.fechaCelebracionAt | date('d \\d\\e M') }},
                                    {{ celebracion.nombre }}
                                </a>

                            {% endfor %}
                        {% else %}
                            No hay reservas de celebraciones activas <br/>
                            Pronto estaremos contigo.
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

