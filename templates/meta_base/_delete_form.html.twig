<form method="post" action="{{ path('meta_base_delete', {'id': meta_base.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meta_base.id) }}">
    <button class="btn">Borrar</button>
</form>
