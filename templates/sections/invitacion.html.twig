<section class="u-content-space mx-auto text-center "
         style=" background-image: url({{ section.imagePath|imagine_filter('squared_thumbnail_large_1920if') }});
                 background-repeat: no-repeat; background-size:cover;">
    <div class="container">
        <div class="row">
            {% for entrada in section.entradassection %}
                {% if (entrada.orden == 1) %}
                    <div class="col-lg-6 align-self-center pr-5 ">
                        <header class="mb-5 text-left fuente-arial-nova">

                            {% if (entrada.isSinTitulo != 1) %}
                                <h2 class="h3 text-left fuente-arial-nova">

                                    {{ entrada.titulo }}
                                </h2>
                            {% endif %}
                            <span class="text-black-75 text-left">
                            {{ entrada.contenido | raw }}
                        </span>
                        </header>
                    </div>
                {% else %}
                    <div class="col-lg-6 align-items-center pl-5">
                        <!-- SVG Tablet Mockup -->
                        <div class="mx-auto bg-white p-5 text-center">
                            <h4 class="text-alameda text-center text-uppercase text-realce-alameda fuente-arial-nova">

                                {% if (entrada.isSinTitulo != 1) %}
                                    {{ entrada.titulo }}
                                {% endif %}
                            </h4>
                            <hr/>
                            <p class="mx-auto text-center ">
                                {{ entrada.contenido | raw }}
                                {% if (entrada.contacto) %}
                                    {% include 'modelEntrada/_pContacto.html.twig' with { 'contactos':entrada.contacto } %}
                                {% endif %}
                            </p>

                        </div>


                        <!-- End Article Image -->
                    </div>
                {% endif %}
            {% endfor %}
            <!-- Article Content -->


        </div>
    </div>
</section>