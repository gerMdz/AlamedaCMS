<div class="bg-white" style="height: 200px">

</div>
<div class="row">
    <div class="col-sm-12">
        <div class="col-md-1 mx-auto "></div>
        <div class="col-md-10 mx-auto ">
            <div class="row justify-content-center main-60"
                 style="background-image: url({{ section.imagePath|imagine_filter('squared_thumbnail_large') }}); background-repeat: no-repeat; background-size:cover">
                <div class="col-sm-11">
                    <div class="container text-center p-5">
                        <h4>
                            <b class="aire-2 text-uppercase text-white">
                                {{ section.contenido | raw }}
                            </b>
                        </h4>
                    </div>
                    <div class="container mb-5">
                        <div class="row">
                            {% for entrada in entradas %}
                                <div class="col-md-4">
                                    <div class="pasos h-100">
                                        <a href="{{ (entrada.linkPosting is defined)? path(entrada.linkRoute): entrada.linkPosting  }}">
                                            <div class="card card-plain bg-white h-100">
                                                <div class="col-sm-4 mx-auto text-center img-20">
                                                    <img src="{{ entrada.imagePath|imagine_filter('squared_thumbnail_large') }}"
                                                         alt="{{ app.request.baseUrl }}"
                                                         class="img-raised rounded-circle img-fluid"/>
                                                </div>
                                                <h4 class="card-title text-center text-alameda ">
                                                    <i>{{ entrada.titulo }}</i>
                                                </h4>
                                                <div class="card-body">
                                                    <p class="card-description text-center text-dark">
                                                        {{ entrada.contenido | raw }}
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1 mx-auto "></div>
    </div>
</div>