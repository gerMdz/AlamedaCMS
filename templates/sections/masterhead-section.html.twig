<div class="container {{ section.cssClass }} ">
    <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
            <h1 class="text-uppercase text-realce-alameda">
                {{ section.title | replace({'<p>':'', '</p>':'<br/>'}) | raw}}
            </h1>
            <a class="btn btn-blue btn-round btn-xl js-scroll-trigger "
                    {% if (section.isLinkExterno) %}
                        href="{{ section.linkPosting }}"
                        target="_blank"
                    {% else %}
                        href="{{ path(section.linkRoute) }}"
                    {% endif %}
            >
                Podés hacerlo desde aquí
            </a>
            <div class="d-flex col-sm-12">
                <hr class="my-auto flex-grow-1 divider col-sm-5">
                <img src="{{ section.imagePath|imagine_filter('squared_icon_70') }}"
                     class="col-sm-1 img-fluid rounded-circle " alt="{{ base.siteName|default('AlamedaCMS') }}">
                <hr class="col-sm-5 my-auto flex-grow-1">
            </div>

            <div class="col-lg-12 align-self-baseline">
                <p class="text-black-75 font-weight-light mb-5 fuente-normal text-center">
                    {{ section.contenido | replace({'<p>':'', '</p>':'<br/>'}) | raw}}
                </p>
            </div>
        </div>
    </div>
</div>
